<!DOCTYPE html>
<html lang="en">
  <head>
    <%= Application.get_env(:live_debugger, :live_debugger_tags) %>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="ClienttCrmApp" suffix=" Â· Phoenix Framework">
      {assigns[:page_title]}
    </.live_title>
    <link rel="icon" type="image/x-icon" href={~p"/favicon.ico"} />
    <link rel="icon" type="image/svg+xml" href={~p"/images/favicon.svg"} />
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          localStorage.setItem("phx:theme", theme);
          document.documentElement.setAttribute("data-theme", theme);
        };

        // Initialize theme (default to light if none set)
        const savedTheme = localStorage.getItem("phx:theme") || "light";
        setTheme(savedTheme);

        // Listen for storage changes (across tabs)
        window.addEventListener("storage", (e) => {
          if (e.key === "phx:theme" && e.newValue) {
            setTheme(e.newValue);
          }
        });

        // Toggle between light and dark
        window.addEventListener("phx:toggle-theme", () => {
          const currentTheme = document.documentElement.getAttribute("data-theme");
          const newTheme = currentTheme === "dark" ? "light" : "dark";
          setTheme(newTheme);
        });

        // Sidebar toggle
        const setSidebar = (open) => {
          localStorage.setItem("phx:sidebar", open ? "open" : "closed");
          const sidebar = document.getElementById("app-sidebar");
          const header = document.getElementById("app-header");
          const main = document.getElementById("app-main");

          if (sidebar) {
            if (open) {
              sidebar.classList.remove("-translate-x-full");
              sidebar.classList.add("translate-x-0");
            } else {
              sidebar.classList.remove("translate-x-0");
              sidebar.classList.add("-translate-x-full");
            }
          }
          if (header) {
            if (open) {
              header.classList.remove("left-0");
              header.classList.add("left-64");
            } else {
              header.classList.remove("left-64");
              header.classList.add("left-0");
            }
          }
          if (main) {
            if (open) {
              main.classList.remove("ml-0");
              main.classList.add("ml-64");
            } else {
              main.classList.remove("ml-64");
              main.classList.add("ml-0");
            }
          }
        };

        // Initialize sidebar state
        window.sidebarOpen = localStorage.getItem("phx:sidebar") !== "closed";

        // Toggle sidebar
        window.addEventListener("phx:toggle-sidebar", () => {
          window.sidebarOpen = !window.sidebarOpen;
          setSidebar(window.sidebarOpen);
        });

        // Apply initial sidebar state after DOM loads
        document.addEventListener("DOMContentLoaded", () => {
          setSidebar(window.sidebarOpen);
        });
      })();
    </script>
  </head>
  <body class="bg-base-200 text-base-content">
    {@inner_content}
  </body>
</html>
